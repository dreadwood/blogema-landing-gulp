extends ../elements/layout-page
include ../components/block-backgroung
include ../components/block-hero-category
include ../components/block-bloggers
include ../components/block-experts
include ../components/block-sponsors
include ../components/block-nominations
include ../components/block-stages
include ../components/yandex-captcha


block data
  - title = "Блогема. Премия блогеров и инфлюенсоров"
  - const heading = 'Блогер года'
  - const headingMobile = 'Блогер года'

block background
  +block-backgroung({
    img: "/img/hero-main-best-blogger-year.jpg",
    imgMobile: "/img/hero-main-best-blogger-year-mobile.jpg"
  })

block content
  +block-hero-category({ title: heading, titleMobile: headingMobile })
  +block-bloggers({ color: "green" })
  +block-experts({ color: "green" })
  +block-stages({})
  +block-nominations({})

block modal
  +yandex-captcha({})
