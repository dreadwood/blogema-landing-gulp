extends ../elements/layout-index

block data
  -
    title = "Блогема"

    let pages = [
      { name: "Главная", url: "main-page.html" },
      { name: "Блогер года", url: "best-blogger-year-page.html" },
      { name: "Лучший детский блогер года", url: "child-blogger-page.html" },
      { name: "Бьюти блогер", url: "beauty-blogger-page.html" },
      { name: "Самый креативный коммерческий проект года", url: "creative-project-year-page.html" }
    ]


block content
  mixin page-list({list})
    ul
      each it in list
        li #[a(href=it.url)=it.name]
  style.
    body {
      --color-main: #4682b4;
      --color-bg: #ffffff;
      --color-text: #4d5156;
      padding: 20px 40px;
      font-family: sans-serif;
      font-size: 16px;
      line-height: 22px;
      font-weight: 400;
      color: var(--color-text);
      background-color: var(--color-bg);
    }
    h1 {
      color: var(--color-main);
    }
    ul,
    ol {
      margin-top: 0;
    }
    li {
      margin-bottom: 10px;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    a:visited {
      color: var(--color-text);
    }
    a:hover,
    a:focus {
      color: var(--color-main);
    }

  h1=title

  h2 Pages
  +page-list({list: pages})
